<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_white">

    <TextView
        android:id="@+id/camera_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:text="受控设备："
        android:textSize="20sp"
        android:textColor="@color/text_black"/>

    <Spinner
        android:id="@+id/camera_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/camera_id"
        android:backgroundTint="@color/black"
        android:popupBackground="@color/floralwhite" />

    <com.jay.fragmentdemo4.MyClass.DLRoundMenuView
        android:id="@+id/dl_rmv"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        app:RMHasCoreMenu="true"
        app:RMCoreMenuNormalBackgroundColor="@color/white"
        app:RMCoreMenuStrokeColor="@color/darkgray"
        app:RMCoreMenuStrokeSize="1dp"
        app:RMRoundMenuStrokeSize="1dp"
        app:RMCoreMenuSelectedBackgroundColor="@color/darkgray"
        app:RMCoreMenuRoundRadius="50dp"
        app:RMRoundMenuNumber="4"
        app:RMIsDrawLineToCenter="false"
        app:RMRoundMenuNormalBackgroundColor="@color/white"
        app:RMRoundMenuDistance="80%"
        app:RMCoreMenuDrawable="@mipmap/circle"
        app:RMRoundMenuDrawable="@mipmap/go"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/dl_rmv">

        <ImageView
            android:id="@+id/suoxiao_button"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="50dp"
            android:background="@drawable/bg_camera_button"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/suoxiao" />

        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>

        <ImageView
            android:id="@+id/fangda_button"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:layout_marginRight="50dp"
            android:src="@drawable/fangda"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/bg_camera_button"/>

    </LinearLayout>



</RelativeLayout>